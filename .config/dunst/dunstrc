# Modern Elegant Dunst Configuration
# Inspired by contemporary design trends with glassmorphism and clean aesthetics

[global]
    ### Display ###
    monitor = DP-1
    follow = none

    ### Geometry ###
    width = 350
    height = (80, 200)
    origin = top-right
    offset = (15, 45)
    scale = 0
    notification_limit = 5

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 0
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 4
    progress_bar_corners = all

    ### Modern rounded design ###
    corner_radius = 12
    corners = all
    icon_corner_radius = 8
    icon_corners = all

    ### Visual enhancements ###
    indicate_hidden = yes
    transparency = 10
    separator_height = 0
    padding = 16
    horizontal_padding = 20
    text_icon_padding = 12
    frame_width = 0
    gap_size = 8

    ### Typography ###
    font = Ubuntu Nerd Font 11
    line_height = 2
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    
    ### Content handling ###
    show_age_threshold = 60
    ellipsize = end
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = no

    ### Icons ###
    enable_recursive_icon_lookup = true
    icon_theme = Papirus-Dark, Adwaita
    icon_position = left
    min_icon_size = 48
    max_icon_size = 128

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false

    ### Wayland ###
    force_xwayland = false
    force_xinerama = false

    ### Mouse interactions ###
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = context

### Modern Color Schemes ###
[urgency_low]
    background = "#1e1e2e"
