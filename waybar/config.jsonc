{
    "layer": "top",
    "position": "top",
    "output": "DP-1",
    "height": 42,
    "spacing": "4px",
    "margin-top": 8,
    "margin-left": 8,
    "margin-right": 8,
    "modules-left": [
        "hyprland/window"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "network",
        "pulseaudio",
        "custom/updates",
        "bluetooth",
        "clock",
        "tray"
    ],
    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "all-outputs": true
    },
    "hyprland/window": {
        "format": "{title}",
        "max-length": 100
    },
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "{:%A, %d %B %Y}"
    },
    "cpu": {
        "format": " {usage}%"
    },
    "memory": {
        "format": "󰍛 {used:0.1f}G"
    },
    "network": {
        "format-ethernet": "󰈀 {ifname}",
        "format-disconnected": "󰖪 No Net",
        "tooltip-format": "{ifname}: {ipaddr}"
    },
    "pulseaudio": {
        "format": "  {volume}%",
        "format-muted": " Muted"
    },
    "bluetooth": {
        "format": "{icon}",
        "format-connected": " {device_alias}",
        "format-on": " on",
        "format-off": " off",
        "format-disabled": " disabled",
        "format-no-controller": "",
        "format-icons": {
            "enabled": "",
            "disabled": "",
            "connected": ""
        },
        "tooltip": true,
        "tooltip-format": "Bluetooth: {status}",
        "on-click": "blueman-manager"
    },
    "tray": {
        "spacing": 10
    },
    "custom/updates": {
        "exec": "~/.config/scripts/updates.sh",
        "interval": 600,
        "format": "{}",
        "tooltip": false
    }
}